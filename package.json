{
  "name": "kargome",
  "version": "0.1.0",
  "private": true,
  "description": "Lit + Vite + LightningCSS web components boilerplate",
  "license": "MIT",
  "type": "module",
  "engines": {
    "bun": ">=1.3.0"
  },
  "scripts": {
    "tokens": "node scripts/build-tokens.js",
    "dev": "bun run tokens && bun --bun vite",
    "build": "bun run tokens && bun --bun vite build",
    "build:analyze": "bun run tokens && bun --bun vite build --mode analyze",
    "preview": "bun --bun vite preview",
    "size": "bun run build && bunx vite-bundle-visualizer"
  },
  "dependencies": {
    "lit": "^3.2.0",
    "lucide": "^0.474.0"
  },
  "devDependencies": {
    "lightningcss": "^1.28.0",
    "rollup-plugin-visualizer": "^5.14.0",
    "vite": "^6.0.0",
    "vite-bundle-visualizer": "^1.2.1"
  }
}
